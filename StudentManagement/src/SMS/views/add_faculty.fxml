<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="SMS.controllers.AddFacultyController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        <Label text="Add New Faculty Member" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label text="Fill in the details below to add a new faculty member to your institute." style="-fx-font-size: 16px; -fx-text-fill: #555555;"/>

        <GridPane hgap="15" vgap="18" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="100" halignment="RIGHT" />
                <ColumnConstraints minWidth="250" />
            </columnConstraints>
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <TextField fx:id="nameField" promptText="Enter faculty member's full name" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-height: 35px; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <TextField fx:id="usernameField" promptText="Choose a unique username" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-height: 35px; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <PasswordField fx:id="passwordField" promptText="Create a password" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-height: 35px; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <Button text="Add Faculty" onAction="#handleAddFaculty" GridPane.rowIndex="3" GridPane.columnIndex="1"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </GridPane>
        <Label fx:id="statusLabel" textFill="red" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
